{
  "compilerOptions": {
    // Layout
    "rootDir": "src",
    "outDir": "dist",

    // Platform & language
    "target": "ES2020",
    "lib": ["ES2021"],
    "module": "commonjs",

    // Types
    "types": ["node"],

    // Emitting & maps (fast builds for an app)
    "sourceMap": true,
    "declaration": false,
    "declarationMap": false,
    "incremental": true,

    // Type safety (keep these strong settings)
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "skipLibCheck": true,

    // Module interop
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    // Per-file isolation & modern module detection
    "isolatedModules": true,
    "moduleDetection": "force"

    // NOTE: intentionally omitted:
    //   - "jsx": not needed on a backend
    //   - "verbatimModuleSyntax": can be over-strict with CJS + esModuleInterop
    //   - "noUncheckedSideEffectImports": keep if you like it and builds pass
  },
  "include": ["src"]
}
